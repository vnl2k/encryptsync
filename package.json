{
  "name": "encryptsync",
  "version": "1.0.2",
  "description": "The app monitors a folder for changes and encrypts with GPG changed files before moving them to the target folder.",
  "scripts": {
    "dev": "tsc --watch --project ./tsconfig.json",
    "dev-webpack": "webpack --config webpack.config.js --watch",
    "test": "mocha $(find tests -name '*.js')",
    "build": "tsc --project ./tsconfig.json; webpack --config webpack.config.js",
    "pkg": "pkg package.json --out-path ./dist"
  },
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/vnl2k/encryptsync"
  },
  "license": "LGPL-3.0-only",
  "author": "vnl2k",
  "prettier": {
    "printWidth": 120
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "level": "^8.0.0",
    "pouchdb": "^8.0.1",
    "sqlite3": "^5.1.6",
    "typescript": "^4.9.4"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@types/pouchdb": "^6.4.0",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-mocha": "^10.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "mocha": "^5.2.0",
    "pkg": "^5.8.0",
    "prettier": "^2.8.1",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "bin": "dist/main.js",
  "pkg": {
    "assets": [
      "node_modules/sqlite3/lib/binding/napi-v6-linux-glibc-x64/*.node"
    ],
    "outputPath": "builds",
    "targets": [ "node18-linux-x64" ]
  },
  "packageManager": "yarn@3.3.1"
}
